extends layout

block content
  h1 #{title}

  form(method='POST' action='')
    div.form-group
      label(for='dept_name') Department Name:
      input#dept_name.form-control(type='text' placeholder='IN4MTX, COMPSCI, BIO SCI, etc.' name='dept_name' value=(undefined===course ? '' : course.dept_name))

      label(for='course_number') Course Tag:
      input#course_number.form-control(type='text' placeholder='101, 6D, 47, etc.' name='course_tag' value=(undefined===course ? '' : course.course_tag))

      label(for='units') Units:
      input#units.form-control(type='number' name='units' value='4')
      //-
        option(value='0') -- Select --
        option(value='1') 1
        option(value='2') 2
        option(value='3') 3
        option(value='4') 4
        option(value='5') 5

      label(for='title') Title:
      input#title.form-control(type='text', placeholder='e.g. Concepts in Deep Learning...' name='title' value=(undefined===course ? '' : course.title))

      label(for='description') Description:
      input#course_tag.form-control(type='text', placeholder='101, 6D, 47, etc.' name='course_tag' value=(undefined===course ? '' : course.course_tag))

      label(for='prerequisites') Course Tag:
      input#course_tag.form-control(type='text', placeholder='101, 6D, 47, etc.' name='course_tag' value=(undefined===course ? '' : course.course_tag))




    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg
